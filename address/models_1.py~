from django.db import models
# Create your models here.

class Address(models.Model):
    address = models.CharField(max_length=200) #building or society	  
    latitude = models.IntegerField()
    longitude = models.IntegerField()
    def __str__(self):
        return str(self.user)
    class Meta:
    	    db_table = 'Address'
    	    verbose_name = 'Address'
    	    verbose_name_plural = 'Addresss'
	

PROPERTY_TYPE_OPTION=(('Flat','Flat'),('Hostel','Hostel'),('House','House'))

class Address_details(models.Model):
    property_type = models.CharField(max_length=6,choices=PROPERTY_TYPE_OPTION)	  
    locality = models.CharField(max_length=50) #society or locality
    society = models.CharField(max_length=50)
    pincode = models.IntegerField()
    street name =  models.CharField(max_length=50)
    block =  models.CharField(max_length=20)
    floor = models.IntegerField() 	  
    room_num = models.CharField(max_length=20)   		
    def __str__(self):
        return str(self.user)
    class Meta:
    	    db_table = 'Address'
    	    verbose_name = 'Address'
    	    verbose_name_plural = 'Addresss'

